<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:fftransformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
    xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:i18n="clr-namespace:Trazabilidad.Helpers"
    x:Class="Trazabilidad.Views.PosicionSuministrosPage"
    BindingContext="{Binding Main, Source={StaticResource Locator}}"
    BackgroundColor="White"
    Title="Configuracion Posiciones de Suministro">
    <ContentPage.Content>
        <StackLayout
            BindingContext="{Binding Stations}">
            <SearchBar
                BackgroundColor="white"
                HeightRequest="46"
                Text="{Binding Filter, Mode=TwoWay}"
                Placeholder="{i18n:Translate Search}"
                SearchCommand="{Binding SearchCommand}">
            </SearchBar>
            <ListView 
                BackgroundColor="White"
                HasUnevenRows="true" 
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsRefreshing, Mode=TwoWay}"
                ItemsSource="{Binding Posdef}"
                SeparatorVisibility="None"
                RefreshCommand="{Binding RefreshCommand}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame
                                CornerRadius="20"
                                HasShadow="true"
                                Margin="5">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SelectStationCommand}"/>
                                </Frame.GestureRecognizers>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                      


                                    </Grid.ColumnDefinitions>
                                    <Label 
                                            Grid.Column="0"
                                            Grid.Row="0"
                                            FontAttributes="None"
                                            FontSize="Default" 
                                            Text="Posicion"
                                            TextColor="Black">
                                    </Label>
                                    <Label 
                                            Grid.Column="1"
                                            Grid.Row="0"
                                            FontAttributes="None"
                                            FontSize="Default" 
                                            Text="Numero de Mangueras"
                                            TextColor="Black">
                                    </Label>
                                 
                                    <Label 
                                            Grid.Column="0"
                                            Grid.Row="1"
                                            FontAttributes="None"
                                            FontSize="Default" 
                                             Text="{Binding Posicion}"
                                            TextColor="Black">
                                    </Label>

                                    <Label 
                                            Grid.Column="1"
                                            Grid.Row="1" 
                                            FontAttributes="None"
                                            FontSize="Default" 
                                             Text="{Binding Numman}"
                                            TextColor="Black">
                                    </Label>


                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>





