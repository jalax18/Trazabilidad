                                            TextColor="Black">
                                        </Label>

                                        <Label 
                                            Grid.Column="1"
                                            Grid.Row="20" 
                                            FontAttributes="None"
                                            FontSize="Default" 
                                             Text="{Binding Fppiefac3}"
                                            TextColor="Black">
                                        </Label>
                                    </Grid>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>