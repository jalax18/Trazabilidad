                                            FontSize="Default" 
                                            Text="Fpfacpie2"
                                            TextColor="Black">
                                        </Label>
                                        <Label 
                                            Grid.Column="0"
                                            Grid.Row="20"
                                            FontAttributes="None"
                                            FontSize="Default" 
                                            Text="Fpfacpie3"
                                            TextColor="Black">
                                        </Label>
                                        

                                        <Label 
                                            Grid.Column="1"
                                            Grid.Row="0" 
                                            FontAttributes="None"
                                            FontSize="Default" 
                                             Text="{Binding Fpcab1}"
                                            TextColor="Black">
